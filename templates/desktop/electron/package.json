{
  "name": "mikeno-electron",
  "version": "1.0.0",
  "description": "Mikeno Electron Desktop Application",
  "main": "dist/main/index.js",
  "author": {
    "name": "Mikeno Team",
    "email": "team@mikeno.app"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -n \"main,preload,renderer\" -c \"blue,magenta,green\" \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json -w",
    "dev:preload": "tsc -p tsconfig.preload.json -w",
    "dev:renderer": "tsc -p tsconfig.renderer.json -w",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "compile": "npm run build",
    "watch": "npm run dev",
    "start": "electron .",
    "start:dev": "cross-env NODE_ENV=development electron .",
    "start:prod": "cross-env NODE_ENV=production electron .",
    "package": "npm run build && electron-builder build --publish never",
    "package:mac": "npm run build && electron-builder build --mac --publish never",
    "package:win": "npm run build && electron-builder build --win --publish never",
    "package:linux": "npm run build && electron-builder build --linux --publish never",
    "package:all": "npm run build && electron-builder build -mwl --publish never",
    "dist": "npm run package",
    "dist:mac": "npm run package:mac",
    "dist:win": "npm run package:win",
    "dist:linux": "npm run package:linux",
    "clean": "rm -rf dist release",
    "rebuild": "npm run clean && npm install"
  },
  "keywords": [
    "electron",
    "desktop",
    "mikeno",
    "typescript"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.mikeno.app",
    "productName": "Mikeno",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "static/**/*",
      "package.json",
      "!**/{.DS_Store,.git,.gitignore,.vscode,docs,node_modules,src,tsconfig*.json}"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64", "universal"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64", "universal"]
        }
      ],
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "darkModeSupport": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "zip",
          "arch": ["x64", "ia32"]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mikeno"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Development",
      "maintainer": "Mikeno Team <team@mikeno.app>",
      "vendor": "Mikeno",
      "synopsis": "Mikeno Desktop Application",
      "description": "A powerful desktop application built with Electron"
    },
    "appImage": {
      "license": "LICENSE"
    },
    "publish": {
      "provider": "github",
      "owner": "mikeno",
      "repo": "mikeno"
    }
  }
}

